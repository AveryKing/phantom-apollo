# Dockerfile for LangGraph Server
FROM node:20-slim

WORKDIR /app

# Install dependencies for Puppeteer (needed if graph uses it directly, 
# although in our split-brain, vision usually runs in the process-lead endpoint)
RUN apt-get update \
    && apt-get install -y wget gnupg \
    && wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | gpg --dearmor -o /usr/share/keyrings/googlechrome-linux-keyring.gpg \
    && sh -c 'echo "deb [arch=amd64 signed-by=/usr/share/keyrings/googlechrome-linux-keyring.gpg] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google.list' \
    && apt-get update \
    && apt-get install -y google-chrome-stable fonts-ipafont-gothic fonts-wqy-zenhei fonts-thai-tlwg fonts-kacst fonts-freefont-ttf libxss1 \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

COPY package*.json ./
RUN npm install --legacy-peer-deps

COPY . .

# Build the project
RUN npm run build

# Expose the port (Cloud Run uses PORT env var)
# Set production env
ENV NODE_ENV=production
EXPOSE 8080

# Command to run the LangGraph server
# We use the shell form to allow environment variable expansion
CMD ["npm", "start"]
